{
  "name": "mental-health-app",
  "version": "1.0.0",
  "description": "Prototype for a mental health app using redux, sagas, workers, & preact",
  "main": "src/index.js",
  "module": "./src/index.js",
  "keywords": [
    "mental-health",
    "react-redux"
  ],
  "author": "techmsi",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-plugin-styled-components": "*",
    "husky": "^5.1.1",
    "preact": "^10.x.x",
    "preact-compat": "^3.x.x",
    "react": "*",
    "react-dom": "*",
    "react-redux": "*",
    "react-router-dom": "*",
    "react-scripts": "*",
    "redux": "*",
    "redux-logger": "*",
    "redux-saga": "*",
    "styled-components": "*",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "*",
    "@commitlint/cli": "*",
    "@commitlint/config-conventional": "*",
    "@lhci/cli": "^0.7.0",
    "@lhci/server": "^0.7.0",
    "chunk-manifest-webpack-plugin": "*",
    "commitizen": "*",
    "customize-cra": "*",
    "lighthouse": "*",
    "lint-staged": "*",
    "local-web-server": "^4.2.1",
    "madge": "*",
    "prettier": "*",
    "prettier-semistandard": "*",
    "react-app-rewired": "*",
    "react-test-renderer": "*",
    "redux-devtools-extension": "*",
    "sharp": "*",
    "webpack-bundle-analyzer": "*",
    "webpack-chunk-hash": "*",
    "webpackbar": "*",
    "worker-loader": "*"
  },
  "scripts": {
    "precz": "lint-staged",
    "cz": "git-cz",
    "crop": "node ./src/crop",
    "toWebP": "for file in ./public/images/headshots/*; do cwebp \"$file\" -o \"${file%.*}.webp\"; done",
    "mimicprod": "yarn build; cd build; ws --http2;",
    "perf:audit": "node perf/runAudit",
    "perf:graph": "node perf/runGraph",
    "format": "prettier-semistandard src/*",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "import/no-anonymous-default-export": "off",
      "react/no-typos": "off"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
